

@model IEnumerable<product_management.Controllers.Product>

@{
    ViewBag.Title = "Product List";
    var successMessage = TempData["SuccessMessage"] as string;
}

<h2 class="text-center">Product List</h2>
<div class="container">

    @* Success Alert *@
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }



    <a class="btn btn-primary mb-3" href="@Url.Action("Create")">Add Product</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = product.Id })">Edit</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = product.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card border-info mb-3" style="max-width: 20rem;">
                        <div class="card-header">@product.Name</div>
                        <div class="card-body">
                            <h4 class="card-title">Price</h4>
                            <p class="card-text">@product.Price</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const alert = document.querySelector(".alert");
        if (alert) {
            setTimeout(function () {
                alert.classList.remove("show");
                alert.classList.add("fade");
                setTimeout(function () {
                    alert.remove();
                }, 500);
            }, 10000); 
        }
    });
</script>


